<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageviewuserhistory"
            android:layout_width="150dp"
            android:layout_height="260dp"
            android:src="@drawable/man"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"/>
            <TextView
                android:id="@+id/textviewnamehistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ismoy Belizaire"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:maxLines="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Origen"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"/>
            <TextView
                android:id="@+id/textvieworigenhistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fake Street 234 San Francisco"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:maxLines="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"/>
            <TextView
                android:id="@+id/textviewdestinationhistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fake Street 435 Quens NY City"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:maxLines="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calification"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"/>
            <TextView
                android:id="@+id/textviewcalificationhistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:maxLines="1"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>