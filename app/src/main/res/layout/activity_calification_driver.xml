<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Controllers.Clients.CalificationDriver">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <io.github.florent37.shapeofview.shapes.ArcView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:elevation="4dp"
            app:shape_arc_height="20dp"
            app:shape_arc_position="bottom">

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="viaje finalizado"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp"
                android:textStyle="bold"/>


            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:lottie_imageAssetsFolder="assets"
                app:lottie_fileName="782-check-mark-success.json"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"/>

        </io.github.florent37.shapeofview.shapes.ArcView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="desde"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textvieworigindrivercalification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="av lo ovalle"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HASTA"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textviewdestinationdrivercalification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="av lo ovalle"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio del servicio"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textviewpreciodriver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 CLP"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"/>
        <RatingBar
            android:id="@+id/ratingBarcalificationdriver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@color/colorWhite"/>
    </LinearLayout>
    <Button
        android:id="@+id/btncalificationdriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/button_login_rounded"
        android:text="calificar Conductor"
        android:textAllCaps="true"
        android:layout_margin="40dp"
        android:textColor="@android:color/black"/>



</androidx.coordinatorlayout.widget.CoordinatorLayout>