<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.Clients.ConnectWithSIFT"
    android:fitsSystemWindows="true">
<include layout="@layout/action_bar_toollbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <io.github.florent37.shapeofview.shapes.ArcView
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:elevation="4dp"
            app:shape_arc_height="0dp"
            android:layout_marginTop="60dp"
            app:shape_arc_position="left">

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aqui pondre un slide "
                android:textSize="20sp"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:textAlignment="center"/>

        </io.github.florent37.shapeofview.shapes.ArcView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="190dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+56"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:background="@color/colorWhite"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:text="Numero de telefono"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="-320dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="20dp"
            android:background="@color/colorWhite">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Acepto terminos y condiciones y Aviso de publicidad"
                android:textColor="@android:color/black"
                android:checked="false"
                android:backgroundTint="@color/colorWhite"
                />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrarse/Ingresar"
        android:textAllCaps="false"
        android:background="@drawable/button_login_rounded"
        android:layout_gravity="bottom"
        android:layout_margin="80dp"
        />
</androidx.coordinatorlayout.widget.CoordinatorLayout>