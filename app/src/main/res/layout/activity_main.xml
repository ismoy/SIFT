<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:theme="@style/SplashTeme"
    tools:context=".Controllers.Optionderegistros.layout_signin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/btn_soy_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_register_rounded"
            android:padding="16dp"
            android:text="soy cliente"
            android:textAllCaps="true"
            android:textColor="@android:color/black" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_soy_conductor"
            android:padding="16dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_login_rounded"
            android:text="Soy conductor"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            />


    </LinearLayout>

</RelativeLayout>