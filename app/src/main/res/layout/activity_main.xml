<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:theme="@style/SplashTeme"
    tools:context=".Controllers.Optionderegistros.layout_signin">


    <io.github.florent37.shapeofview.shapes.TriangleView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:elevation="4dp"
        app:shape_triangle_percentBottom = " 0.5 "
        app:shape_triangle_percentLeft = " 0 "
        app:shape_triangle_percentRight = " 0 " >

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:text="@string/app_name"/>
    </io.github.florent37.shapeofview.shapes.TriangleView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/btn_soy_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_register_rounded"
            android:padding="16dp"
            android:text="soy cliente"
            android:textAllCaps="true"
            android:textColor="@android:color/black" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_soy_conductor"
            android:padding="16dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_login_rounded"
            android:text="Soy conductor"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            />


    </LinearLayout>

</RelativeLayout>